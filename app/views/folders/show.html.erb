<h1><%= @path %></h1>

<h2>Folders:</h2>
<% if @folders.count > 0 %>
  <ul>
    <% @folders.each do |folder| %>
      <li><%= link_to folder.name, folder_show_path(folder.path) %><br />
          <%= link_to "Copy", copy_start_path(folder.path) %><br /><br /></li>
    <% end %>
  </ul>
<% end %>

<br /><hr /><br />

<h2>Files:</h2>
<% if @files.count > 0 %>
  <ul>
    <% @files.each do |file| %>
      <li><%= file.name %><br />
          <%= link_to "Copy", copy_start_path(file.path) %><br /><br /></li>

    <% end %>
  </ul>
<% end %>
